<h2 class="text-center mt-4"><%= @article.title %></h2>
<div class= "container">
    <div class ="row justify-content-md-center">
        <div class= "col-8 mt-4">
            <div class="card shadow mb-5 bg-white rounded">
            <div class="card-header font-italic text-center">
                Featured
            </div>
            <div class="card-body text-center">
                <div class="card-text text-left"><%= simple_format(@article.description) %></div>
                <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are ou sure?"} %>
            </div>
            <div class= "text-center">
                <div class = "card-footer text-muted-center ">
                    <small>Created <%= time_ago_in_words(@article.created_at)%> ago,
                    edtied <%= time_ago_in_words(@article.updated_at)%> ago </small>
                </div>     
            </div>
            </div>
        </div>
    </div>
</div>
<p>
    <%= link_to 'New', new_article_path(@articles) %>
</p>