<h1 class="text-center mt-4">Listing all articles</h1>
<div class= "container">
    <% @articles.each do |article| %>
        <div class ="row justify-content-md-center">
            <div class= "col-8 mt-4">
                <div class="card shadow mb-5 bg-white rounded">
                <div class="card-header font-italic text-center">
                    <%= article.user.username %>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title text-center"><%= link_to article.title, article_path(article), class: "text-success"%></h5>
                    <p class="card-text text-center"><%= truncate(article.description, length: 100) %></p>
                    <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
                    <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
                    <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are ou sure?"} %>
                </div>
                <div class= "text-center">
                    <div class = "card-footer text-muted-center ">
                        <small>Created <%= time_ago_in_words(article.created_at)%> ago,
                        edtied <%= time_ago_in_words(article.updated_at)%> ago </small>
                    </div>     
                </div>
                </div>
            </div>
        </div>
    <%end%>
</div>
<p>
    <%= link_to 'New', new_article_path(@articles) %>
</p>